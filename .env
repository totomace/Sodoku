# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis TTL (Time To Live) in seconds
REDIS_SESSION_TTL=86400
REDIS_GAME_STATE_TTL=3600
REDIS_USER_LIST_TTL=300

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_TYPE=postgres

# POSTGRESQL CONFIGURATION
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=12345
PGDATABASE=sudoku_game
POSTGRES_MAX_CONNECTIONS=50
POSTGRES_MIN_CONNECTIONS=10

# ============================================
# GAME SETTINGS
# ============================================
STARTING_SCORE=1000
DEFAULT_TURN_TIME=30
DEFAULT_TIMEOUT_PENALTY=50
DEFAULT_MISTAKE_PENALTY=100

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=10
SESSION_SECRET=your-secret-key-change-this-in-production

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
